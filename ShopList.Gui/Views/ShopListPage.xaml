<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShopList.Gui.ViewsModels"
             x:DataType="viewmodel:ShopListViewModel"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="ShopListPage"
              xmlns:model="clr-namespace:ShopList.Gui.Models">
   

    <Grid
        RowDefinitions="Auto,*"
        Padding="8"
        RowSpacing="6">

        <Grid
                Grid.Row="0"
                Grid.Column="0"
                RowDefinitions="Auto,Auto"
                ColumnDefinitions="Auto, *, Auto, Auto"
                RowSpacing="8">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                VerticalOptions="Center"
                Text="Producto: "
                FontSize="Medium"/>

            <Entry
                    Grid.Row="0"
                    Grid.Column="1"
                    BackgroundColor="#f0f0f0"
                    Text="{Binding NombreDelArticulo}"
                    FontSize="Medium"/>

            <Label
                   Grid.Row="1"
                   Grid.Column="0"
                   Text="Cantidad:"
                   VerticalOptions="Center"
                   FontSize="Medium"/>

            <Entry
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding CantidadAComprar}"
                BackgroundColor="#f0f0f0"
                FontSize="Medium"/>

            <Button
                    Grid.Row="2"
                    Grid.Column="3"
                    Text="+"
                    Command="{Binding AgregarShopListItemCommand}"/>

            <Button
                      Grid.Row="1"
                      Grid.Column="3"
                      Text="X"/>

        </Grid>
        
        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            SelectionMode="Single"
            ItemsSource="{Binding Items}"
            EmptyView="Aun no se han registrado productos."
            BackgroundColor="#f0f0f0">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                    <Border>
                        <Grid
                            Padding="8,0"
                            ColumnDefinitions="Auto, *, Auto">

                            <CheckBox Grid.Column="0"
                                IsChecked="{Binding Comprado}"
                                VerticalOptions="Center"/>

                            <Label Grid.Column="1"
                                Text="{Binding Nombre}"
                                VerticalOptions="Center"/>

                            <Label Grid.Column="2"
                                Text="{Binding Cantidad}"
                                VerticalOptions="Center"/>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>